@using PersonalBlog.Data

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_AdminLayout.cshtml";
}

    <section class="content-header">
        <h4>Tag Manage</h4>
        <small class="text-primary">
            <i class="fa fa-info-circle"></i>
           List, Add or delete tag on this page.
        </small>
    </section>

<section class="content">
    <div class="row">
        <div class="col-md-4">
            <div class="card card-info">
                <div class="card-blue card-header">
                    <h3 class="card-title">Add Tag</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("AddTag","AdminTag",FormMethod.Post))
                    {
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Tag Content</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="Content"/>
                            </div>
                        </div>
                        <div class="form-group float-right">
                            <button class="btn btn-outline-info">Save</button>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Content</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Tag tag in ViewBag.Tags)
                    {
                    <tr>
                        <td>@tag.Id</td>
                        <td class="text-primary">@tag.Content</td>
                        <td class="text-center">
                            <a href="/AdminTag/DeleteTag?tagId=@tag.Id" class="btn btn-xs btn-danger">
                                <i class="fa fa-trash"></i>Remove
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
